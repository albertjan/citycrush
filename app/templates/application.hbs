<div>
    <nav class="top-bar fixed" role="navigation">
        <ul class="title-area">
            <!-- Title Area -->
            <li class="name">
                <h1>
                    <a href="#">citycrusher</a>
                </h1>
            </li>
            <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
            <li class="toggle-topbar menu-icon">
                <a href="#">
                    <span>Menu</span>
                </a>
            </li>
        </ul>

        <section class="top-bar-section">
            <ul class='right'>
                <li>{{#linkTo 'game'}}game{{/linkTo}}</li>
                <li>{{#linkTo 'leaderboard'}}leaderboard{{/linkTo}}</li>
                <li>{{#linkTo 'battle'}}game{{/linkTo}}</li>
